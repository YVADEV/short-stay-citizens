---
import { Image } from "astro:assets";
import buildingImg1 from "../img/g1.png";
import buildingImg2 from "../img/g2.png";
import buildingImg3 from "../img/g3.png";
import buildingImg4 from "../img/g4.png";
---

<div class="px-4 lg:py-16 py-8 mx-auto max-w-screen-xl text-center">
  <h1
    class="mb-4 text-4xl font-medium tracking-tight leading-none text-Primary-Blue md:text-5xl lg:text-6xl"
  >
    More places in Amsterdam<span class="text-Primary-Accent">.</span>
  </h1>
</div>
<section class="flex items-center w-full justify-center mx-auto">
  <div
    class="relative items-center w-full px-5 mx-auto md:px-12 lg:px-20 max-w-screen-xl"
  >
    <div class="grid grid-cols-2 gap-12 lg:py-12 md:grid-cols-2 lg:grid-cols-4">
      <figure>
        <Image
          src={buildingImg1}
          alt="apartment img"
          width="1310"
          height="873"
          class="w-full rounded-lg cursor-pointer transform transition duration-1000 hover:scale-95"
        />

        <p class="mt-5 text-md font-medium leading-6 text-Primary-Blue">
          Amsterdam Prince Island by <span class="text-Primary-Accent"
            >YAYS</span
          >
        </p>
      </figure>
      <figure>
        <Image
          src={buildingImg2}
          alt="apartment img"
          width="1310"
          height="873"
          class="w-full rounded-lg cursor-pointer transform transition duration-1000 hover:scale-95"
        />

        <p class="mt-5 text-md font-medium leading-6 text-black">
          <span class="text-Primary-Accent">YAYS</span> Amsterdam Salthouse
          Canal
        </p>
      </figure>
      <figure>
        <Image
          src={buildingImg3}
          alt="apartment img"
          width="1310"
          height="873"
          class="w-full rounded-lg cursor-pointer transform transition duration-1000 hover:scale-95"
        />

        <p class="mt-5 text-md font-medium leading-6 text-black">
          Amsterdam North by <span class="text-Primary-Accent">YAYS</span>
        </p>
      </figure>
      <figure>
        <Image
          src={buildingImg4}
          alt="apartment img"
          width="1310"
          height="873"
          class="w-full rounded-lg cursor-pointer transform transition duration-1000 hover:scale-95"
        />

        <p class="mt-5 text-md font-medium leading-6 text-black">
          Amsterdam North by <span class="text-Primary-Accent">YAYS</span>
        </p>
      </figure>
    </div>
  </div>
</section>
