<head>
  <!-- Link Swiper's CSS -->
  <link
    rel="stylesheet"
    href="https://unpkg.com/swiper/swiper-bundle.min.css"
  />

  <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

  <style>
    .carousel {
      width: 1200px; /* Enough width to fit three 300px images side by side */
      height: 400px;
      margin: auto;
      position: relative;
      overflow: hidden;
      display: flex;
      justify-content: center;
    }

    .carousel-images img {
      width: 800px; /* Width of images */
      height: 400px; /* Height of images */
      position: absolute;
      opacity: 0;
      transition:
        transform 0.5s ease-out,
        opacity 0.5s ease-out;
      backface-visibility: hidden;
    }

    .carousel-images img.prev,
    .carousel-images img.next {
      opacity: 0.6;
    }

    .carousel-images img.active {
      opacity: 1;
      z-index: 2;
      transform: translateX(-50%) scale(1);
    }

    .carousel-images img.prev {
      transform: translateX(calc(-150% + 150px)) scale(0.8); /* Adjust position considering the image width */
    }

    .carousel-images img.next {
      transform: translateX(calc(50% + 150px)) scale(0.8); /* Adjust position considering the image width */
    }

    .carousel-images img.active {
      opacity: 1;
      z-index: 2;
    }

    .carousel-images img.prev {
      transform: translateX(-150%) scale(0.8); /* Adjust scale for 3D effect */
    }

    .carousel-images img.next {
      transform: translateX(50%) scale(0.8); /* Adjust scale for 3D effect */
    }

    button {
      display: none; /* Hide navigation buttons */
    }

    .carousel-images img {
      /* ... (other properties remain the same) ... */
      transition:
        transform 0.5s ease-out,
        opacity 0.5s ease-out; /* Smoother transition */
    }

    /* Base styles for larger screens remain unchanged */
  </style>
</head>

<body>
  <div
    id=""
    class="max-w-screen-xl mx-auto px-4 md:px-8 py-12 transition-all duration-500 ease-linear lg:py-40"
  >
    <div
      class="px-4 mx-auto max-w-screen-xl text-center justify-center relative py-16"
    >
      <h1
        class="mb-4 text-4xl font-medium tracking-tight leading-none text-Primary-Blue md:text-5xl lg:text-6xl lg:mb-16"
      >
        Apartments Gallery<span class="text-Primary-Accent">.</span>
      </h1>
      <div class="carousel flex justify-center mx-auto max-w-screen-xl">
        <div class="carousel-images">
          <img
            class="rounded-lg"
            src="https://images.pexels.com/photos/2724749/pexels-photo-2724749.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
            alt="Bedroom"
          />
          <img
            class="rounded-lg"
            src="https://images.pexels.com/photos/534151/pexels-photo-534151.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
            alt="Living Room"
          />
          <img
            class="rounded-lg"
            src="https://images.pexels.com/photos/3797991/pexels-photo-3797991.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
            alt="Dining Room"
          />
          <img
            class="rounded-lg"
            src="https://images.pexels.com/photos/1571469/pexels-photo-1571469.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
            alt="Bedroom"
          />
          <img
            class="rounded-lg"
            src="https://images.pexels.com/photos/4564013/pexels-photo-4564013.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
            alt="Living Room"
          />
          <img
            class="rounded-lg"
            src="https://images.pexels.com/photos/7031716/pexels-photo-7031716.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
            alt="Dining Room"
          />
        </div>
        <button class="prev" onclick="moveSlide(-1)">&#10094;</button>
        <button class="next" onclick=";moveSlide(1)">&#10095;</button>
      </div>
    </div>
  </div>

  <script is:inline src="https://unpkg.com/swiper/swiper-bundle.min.js"
  ></script>
</body>
